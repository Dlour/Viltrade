<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_marginStart="10dp"
    android:layout_height="wrap_content">
    
    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/bahan_tambang"
        android:id="@+id/img_itemCO"
        />

    <TextView
        android:id="@+id/harga_CO"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_itemCO"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/sora_semibold"
        android:text="Rp3.000"
        android:textColor="@color/black"
        android:textSize="10dp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/quantCO"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/harga_CO"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/sora_reguler"
        android:text="Jumlah 1"
        android:textColor="@color/black"
        android:textSize="8dp"
        android:visibility="visible" />


    <TextView
        android:id="@+id/productName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/qunatity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/productPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible" />
    

</RelativeLayout>