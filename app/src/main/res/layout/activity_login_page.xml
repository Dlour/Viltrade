<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_logo"
    tools:context=".login_page">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tidak Punya Akun?"
        android:id="@+id/textTdkpnya"
        android:fontFamily="@font/poppins_regular"
        android:textSize="13dp"
        android:textColor="#8D8D8D"
        android:layout_marginTop="12dp"
        android:layout_marginStart="110dp"
        app:layout_constraintTop_toBottomOf="@id/lgnbtn"
        app:layout_constraintStart_toStartOf="parent"/>


    <TextView
        android:id="@+id/regist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Daftar"
        android:textColor="#34A1E2"
        android:textSize="13dp"
        app:layout_constraintTop_toBottomOf="@id/lgnbtn"
        app:layout_constraintStart_toEndOf="@id/textTdkpnya"
        android:layout_marginTop="12dp"

         />

    <TextView
        android:id="@+id/masuk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Masuk"
        android:fontFamily="@font/poppins_medium"
        android:textSize="32dp"
        android:textColor="#000000"
        android:layout_marginTop="172dp"
        android:layout_marginLeft="145dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>


    <TextView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_regular"
        android:text="Email"
        android:textColor="#000000"
        android:textSize="14dp"
        app:layout_constraintTop_toBottomOf="@id/masuk"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="295dp"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="323dp" />


    <EditText
        android:id="@+id/emailfield"
        android:layout_width="306dp"
        android:layout_height="57dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/edit_text"
        android:fontFamily="@font/poppins_regular"
        android:hint="Email"
        android:paddingLeft="16dp"
        android:textSize="14dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.276"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/email" />

    <TextView
        android:id="@+id/katasandi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/poppins_regular"
        android:text="Kata Sandi"
        android:textSize="14dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.086"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/emailfield" />

    <EditText
        android:id="@+id/passwordfield"
        android:layout_width="306dp"
        android:layout_height="57dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/edit_text"
        android:fontFamily="@font/poppins_regular"
        android:inputType="textPassword"
        android:hint="Kata Sandi"
        android:paddingLeft="16dp"
        android:textSize="14dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.276"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/katasandi"/>

    <TextView
        android:id="@+id/lupakatasandi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"
        android:fontFamily="@font/poppins_regular"
        android:text="Lupa Kata sandi?"
        android:textColor="#4285F4"
        android:textSize="11dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.758"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/passwordfield" />

    <Button
        android:id="@+id/lgnbtn"
        android:layout_width="272dp"
        android:layout_height="54dp"
        android:layout_marginTop="118dp"
        android:backgroundTint="@color/dasar"


        android:fontFamily="@font/poppins_medium"
        android:text="Masuk"
        android:textColor="@color/white"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/passwordfield" />






</androidx.constraintlayout.widget.ConstraintLayout>