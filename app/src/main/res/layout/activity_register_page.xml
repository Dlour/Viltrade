<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".register_page">

    <TextView
        android:id="@+id/welcometext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selamat Datang Di"
        android:textSize="15dp"
        android:fontFamily="@font/poppins_regular"
        android:layout_marginTop="58dp"
        android:layout_marginLeft="18dp"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/viltrade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:layout_marginTop="58dp"
        android:layout_marginLeft="5dp"
        android:text="Viltrade"
        android:fontFamily="@font/poppins_bold"
        android:textColor="#34A1E2"
        app:layout_constraintStart_toEndOf="@id/welcometext"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/hvacc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13dp"
        android:text="Sudah Punya Akun?"
        android:layout_marginTop="58dp"
        android:layout_marginLeft="120dp"
        android:textColor="#8D8D8D"
        app:layout_constraintStart_toStartOf="@id/viltrade"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="82dp"
        android:text="Login"
        android:textColor="#34A1E2"
        android:textSize="13dp"
        app:layout_constraintEnd_toEndOf="@id/hvacc"
        app:layout_constraintTop_toTopOf="@id/hvacc" />

    <TextView
        android:id="@+id/daftar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="84dp"
        android:fontFamily="@font/poppins_medium"
        android:text="Daftar"
        android:textColor="#000000"
        android:textSize="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/role"
        android:text="Sebagai Distributor"
        android:textColor="@color/dasar"
        android:fontFamily="@font/poppins_regular"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/daftar"
        app:layout_constraintStart_toStartOf="@id/daftar"/>





    <TextView
        android:id="@+id/namalengkap"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginTop="210dp"
        android:fontFamily="@font/poppins_regular"
        android:text="Nama Lengkap"
        android:textColor="#000000"
        android:textSize="14dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.089"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <EditText
        android:id="@+id/namalngkpbox"
        android:layout_width="165dp"
        android:layout_height="57dp"
        android:hint="Nama Lengkap"
        android:layout_marginTop="25dp"

        android:fontFamily="@font/poppins_light"
        android:textSize="14dp"
        android:layout_marginStart="9dp"
        android:background="@drawable/edit_text"
        android:paddingLeft="14dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/namalengkap"
        />

    <TextView
        android:id="@+id/namapggln"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="210dp"
        android:layout_marginStart="125dp"
        android:text="Nama Panggilan"
        android:textColor="#000000"
        android:fontFamily="@font/poppins_regular"
        android:textSize="14dp"
        app:layout_constraintStart_toStartOf="@id/namalngkpbox"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
        android:id="@+id/namapgglnbox"
        android:layout_width="165dp"
        android:layout_height="57dp"
        android:hint="Nama Panggilan"
        android:fontFamily="@font/poppins_light"
        android:textSize="14dp"
        android:layout_marginTop="25dp"
        android:layout_marginStart="150dp"
        android:background="@drawable/edit_text"
        android:paddingLeft="14dp"
        app:layout_constraintStart_toStartOf="@id/namalngkpbox"
        app:layout_constraintTop_toTopOf="@id/namapggln"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        android:fontFamily="@font/poppins_regular"
        android:textSize="14dp"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="305dp"
        android:textColor="#000000"
        app:layout_constraintTop_toTopOf="@id/namalngkpbox"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
        android:id="@+id/emailbox"
        android:layout_width="350dp"
        android:layout_height="57dp"
        android:hint="Email"
        android:fontFamily="@font/poppins_light"
        android:textSize="13dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/edit_text"
        android:paddingLeft="14dp"
        app:layout_constraintTop_toTopOf="@id/email"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/passwordtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Masukkan Kata Sandi"
        android:fontFamily="@font/poppins_regular"
        android:textSize="16dp"
        android:layout_marginTop="85dp"
        android:layout_marginEnd="190dp"
        app:layout_constraintTop_toTopOf="@id/emailbox"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <EditText
        android:id="@+id/passwordbox"
        android:layout_width="165dp"
        android:layout_height="57dp"
        android:inputType="textPassword"
        android:background="@drawable/edit_text"
        android:hint="Kata Sandi"
        android:fontFamily="@font/poppins_light"
        android:textSize="14dp"
        android:layout_marginTop="29dp"
        android:layout_marginEnd="190dp"
        android:paddingLeft="16dp"
        app:layout_constraintTop_toTopOf="@id/passwordtext"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/repeatpsw"
        android:layout_width="145dp"
        android:layout_height="wrap_content"
        android:text="Ulangi Kata Sandi"
        android:fontFamily="@font/poppins_regular"
        android:textSize="16dp"
        android:layout_marginStart="190dp"
        android:layout_marginTop="85dp"
        app:layout_constraintTop_toTopOf="@id/emailbox"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
        android:id="@+id/repeatbox"
        android:layout_width="165dp"
        android:layout_height="57dp"
        android:inputType="textPassword"
        android:hint="Ulangi Kata Sandi"
        android:fontFamily="@font/poppins_light"
        android:textSize="14dp"
        android:layout_marginTop="29dp"
        android:layout_marginStart="200dp"
        android:background="@drawable/edit_text"
        android:paddingLeft="14dp"
        app:layout_constraintTop_toTopOf="@id/repeatpsw"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/registbtn"
        android:layout_width="203dp"
        android:layout_height="47dp"
        android:backgroundTint="@color/dasar"
        android:textColor="@color/white"
        android:text="Selanjutnya"
        android:layout_marginBottom="90dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>







</androidx.constraintlayout.widget.ConstraintLayout>