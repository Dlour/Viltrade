<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".searchActivoty">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/back"
        android:src="@drawable/baseline_arrow_back_ios_24"
        android:layout_marginTop="40dp"
        android:layout_marginStart="20dp"
        />

    <EditText
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:id="@+id/searchAct"
        android:drawableTint="@color/dasar"
        android:layout_marginTop="40dp"
        android:drawableStart="@drawable/baseline_search_24"
        android:padding="4dp"
        android:drawablePadding="8dp"
        android:inputType="text"
        android:textSize="11sp"
        android:fontFamily="@font/sora_semibold"
        android:hint="Cari produk yang kamu inginkan"
        android:layout_marginStart="60dp"
        android:background="@drawable/edit_search"
        />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/searchAct"
        android:padding="10dp"
        >

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rec_search"
            />


    </RelativeLayout>





</RelativeLayout>